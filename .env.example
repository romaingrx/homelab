# Tailscale OAuth client credentials (scope: devices:read)
# Create at: https://login.tailscale.com/admin/settings/oauth
TS_OAUTH_CLIENT_ID=
TS_OAUTH_CLIENT_SECRET=

# Cloudflare API token (scope: Zone.DNS:Edit on romaingrx.com)
# Used for Let's Encrypt DNS-01 cert validation and cloudflare.sh helpers
# Create at: https://dash.cloudflare.com/profile/api-tokens
CF_API_TOKEN=

# Cloudflare Zone ID for romaingrx.com
# Find at: Cloudflare dashboard -> romaingrx.com -> Overview (right sidebar)
CF_ZONE_ID=

# acme.sh email for Let's Encrypt registration
ACME_EMAIL=

# TrueNAS API key (for certificate deployment via REST API)
# Create at: TrueNAS UI -> Credentials -> API Keys
# Only required if TrueNAS receiver is used
TRUENAS_API_KEY=
